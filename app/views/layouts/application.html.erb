<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

    <meta name="viewport" content="width=device-width, initial-scale=1">
	  <!-- Latest compiled and minified CSS -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap.min.css">

	<!-- Optional theme -->
	<link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.3.2/css/bootstrap-theme.min.css">

	<!-- Latest compiled and minified JavaScript -->
	<script src="//netdna.bootstrapcdn.com/bootstrap/3.3.2/js/bootstrap.min.js"></script>
    <script src="http://code.jquery.com/jquery-2.1.4.min.js"></script>
</head>
<body>


<div class="container">
			<!-- Static navbar -->
			<nav class="navbar navbar-default" role="navigation">
			  <div class="navbar-header">
			    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
			      <span class="sr-only">Toggle navigation</span>
			      <span class="icon-bar"></span>
			      <span class="icon-bar"></span>
			      <span class="icon-bar"></span>
			    </button>
			    <a class="navbar-brand" href="/">Blog</a>
			  </div>
			  <div class="navbar-collapse collapse">
			    <ul class="nav navbar-nav">
			      <li><%= link_to 'My Blog', articles_path %></li>
			      <li><%= link_to 'About', about_path %></li>
			      <li><%= link_to 'Terms', terms_path %></li>
			      <li><a href="/contacts">Contacts</a></li>
			    </ul>

			    <ul class="nav navbar-nav navbar-right">
			    			      
			      	 <% if user_signed_in? %>
			      	    <% welcome_username = 'Hi, ' + current_user.username+'!' %>
			      	    <li><div class="hidden-xs" style="margin-top: 15px"><%= welcome_username %></div></li>
			      	    <li><div class="hidden-xs" style="margin-top: 15px"><%= t('hello') %></div></li>
					    
					    <li><%= link_to 'Sing out', destroy_user_session_path, method: :delete %></li>		
					 <% else %>
						<li><%= link_to 'Sing in', new_user_session_path %></li>	 
					 <% end %>
			      
			    </ul>
			  </div><!--/.nav-collapse -->
			</nav>

	 <% if user_signed_in? %>
		Hello, <%= current_user.username %> | <%= link_to 'Sing out', destroy_user_session_path, method: :delete %>		
	 <% else %>
		<%= link_to 'Sing in', new_user_session_path %>	 
	 <% end %>

	 <p class="notice"><%= notice %></p>
	 <p class="alert"><%= alert %></p>

   <div> 
	  <%= yield %>
   </div>

   <div class="footer">
        <p>&copy; Company 2015</p>
   </div>
</div> <!-- /container -->
</body>
</html>
